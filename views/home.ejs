<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/css/bootstrap') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/components/nav') %>

    <div class="container">

        <div class="container col ">
        <% blogs.forEach(blog => { %>
            <div class="card" style="width: 18rem;">
                <img src="/uploads/<%= blog.coverimage %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <a href="/blog/view/<%= blog._id %>" class="btn btn-primary">View Blog</a>
                </div>
              </div>
        <% }) %>
    </div>

    <%- include('./partials/js/bootstrap') %>

</body>
</html>