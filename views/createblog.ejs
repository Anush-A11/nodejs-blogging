<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/css/bootstrap') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HomePage</title>
</head>
<body>
    <%- include('./partials/components/nav') %>

    <div class="container my-5">

        <h1>Create a Blog</h1>

    </div>

    <div class="container">

        

        <form method="post" action="/blog/create" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="coverimage" class="form-label">Cover Image</label>
                <input name="coverimage" type="file" class="form-control" id="exampleInputfile" aria-describedby="fileHelp">
            </div>

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="title" type="text" class="form-control" id="exampleInputtitle" aria-describedby="emailHelp">
            </div>
            
            <div class="mb-3">

                <label for="exampleInputPassword1" class="text">Content</label>
                <textarea name="content" class="form-control"></textarea>
            
            </div>
  
              <button type="submit" class="btn btn-primary">Create</button>


        </form>


    </div>




    <%- include('./partials/js/bootstrap') %>

</body>
</html>